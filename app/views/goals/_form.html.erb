<%= form_with model: @goal do |f| %>
  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal.errors.count, 'error') %> prohibited this goal from signing up:</h2>

      <ul>
      <% @goal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.number_field :amount %>
  </div>

  <div class="field">
      <% @groups.each do |group| %>
      <%= f.label group.name %><br />
      <%= f.check_box :group %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Sign Up' %>
  </div>
<% end %>

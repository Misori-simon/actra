
<%= form_with model: @group do |f| %>
 <%= display_form_errors(@group) %>

  <div class="field">
    <%= f.text_field :name, placeholder: :name, required: true %>
  </div>

  <label for="image" class="field-group-label"> Choose Image</label>
  <div class="field">
    <%= f.file_field :image, required: true %>
  </div>

  <div class="form-btn-wrapper bg-sec">
    <%= f.submit "#{locals[:submit_btn_text]}", class: 'form-btn bg-sec' %>
  </div>
<% end %>
